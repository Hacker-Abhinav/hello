#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--){
    int s,in,f;
    cin>>s>>in>>f;
    int c=0;
    int x=in-s;
    int y=f+x;
    if(y>0)
    {
        if(f%2==0)
        {
            c=y+1;
        }
        else
            c=y;
    }
    else if(y==0)
    {
        if(s>in)
        {
            c=f;
        }
    }
    cout<<c<<endl;
}
}

